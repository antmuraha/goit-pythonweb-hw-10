# Copy this file to .env and edit values before running docker-compose

FRONTEND_URL=http://localhost:8000

# Postgres credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=example_password
POSTGRES_DB=hw10

# For Alembic migrations locally
ALEMBIC_POSTGRES_HOST=localhost

SQLALCHEMY_DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Enable SQLAlchemy query logging
SQLALCHEMY_ECHO=True

# JWT Authentication configuration
# IMPORTANT: Change SECRET_KEY to a secure random string in production!
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_TOKEN_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
OAUTH2_SCHEME_TOKEN_URL=/api/v1/auth/login


# Debug Mode: Verification links will print to console
# Production Mode: Set these environment variables for email sending:

SMTP_LOCAL_DEBUG=True
SMTP_HOST=dev-smtp # (e.g., smtp.gmail.com)
SMTP_PORT=1025
SMTP_STARTTLS=False
SMTP_USER=
SMTP_PASSWORD=
# SMTP_FROM_EMAIL

CLOUDINARY_API_KEY=<api_key>
CLOUDINARY_API_SECRET=<api_secret>
CLOUDINARY_CLOUD_NAME=<cloud_name>
